<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE configuration
  PUBLIC '-//mybatis.org//DTD Config 3.0//EN'
  'http://mybatis.org/dtd/mybatis-3-config.dtd'>
<configuration>
	<properties resource='jdbc.properties' />
	<typeAliases>
		<typeAlias type='com.ritikk.teamcollab.domain.Organization'
			alias='Organization'></typeAlias>
		<typeAlias type='com.ritikk.teamcollab.domain.Project'
			alias='Project'></typeAlias>
		<typeAlias type='com.ritikk.teamcollab.domain.Member' alias='Member' />
		<typeAlias type="com.ritikk.teamcollab.domain.Story" alias="Story"/>
		<typeAlias type="com.ritikk.teamcollab.domain.ProjectMembership" alias="ProjectMembership"/>
	</typeAliases>
	<environments default='development'>
		<environment id='development'>
			<transactionManager type='JDBC' />
			<dataSource type='POOLED'>
				<property name='driver' value='${jdbc.driverClassName}' />
				<property name='url' value='${jdbc.url}' />
				<property name='username' value='${jdbc.username}' />
				<property name='password' value='${jdbc.password}' />
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource='OrganizationsMapper.xml' />
		<mapper resource="ProjectsMapper.xml" />
		<mapper resource='MembersMapper.xml' />
		<mapper resource="StoriesMapper.xml" />
		<mapper resource="ProjectMembershipsMapper.xml"/>
	</mappers>
</configuration>