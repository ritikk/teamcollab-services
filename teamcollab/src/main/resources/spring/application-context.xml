<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://www.springframework.org/schema/beans     
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.ritikk.teamcollab" />

	<bean id="myBatisUserService" class="com.ritikk.teamcollab.dao.MyBatisUserService">
		<property name="mapper" ref="membersMapper"></property>
	</bean>
	<bean id="projectMembershipsDaoImpl" class="com.ritikk.teamcollab.dao.ProjectMembershipsDaoImpl">
		<property name="mapper" ref="projectMembershipsMapper"></property>
	</bean>
	<bean id="organizationsResource" class="com.ritikk.teamcollab.services.OrganizationsResource"></bean>
	<bean id="organizationsDaoImpl" class="com.ritikk.teamcollab.dao.OrganizationsDaoImpl">
		<property name="mapper" ref="organizationsMapper"></property>
	</bean>

	<bean id="projectsResource" class="com.ritikk.teamcollab.services.ProjectsResource"></bean>
	<bean id="projectsDaoImpl" class="com.ritikk.teamcollab.dao.ProjectsDaoImpl">
		<property name="mapper" ref="projectsMapper"></property>
	</bean>

	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<value>classpath:jdbc.properties</value>
		</property>
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="${jdbc.driverClassName}" />
		<property name="url" value="${jdbc.url}" />
		<property name="username" value="${jdbc.username}" />
		<property name="password" value="${jdbc.password}" />
	</bean>

	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:mybatis-config.xml" />
	</bean>

	<!-- =============== MyBATIS beans configuration ================== -->
	<bean id="organizationsMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
		<property name="mapperInterface"
			value="com.ritikk.teamcollab.mappers.OrganizationsMapper" />
	</bean>
	<bean id="projectMembershipsMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
		<property name="mapperInterface"
			value="com.ritikk.teamcollab.mappers.ProjectMembershipsMapper" />
	</bean>
	<bean id="membersMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
		<property name="mapperInterface"
			value="com.ritikk.teamcollab.mappers.MembersMapper" />
	</bean>
	<bean id="projectsMapper" class="org.mybatis.spring.mapper.MapperFactoryBean">
		<property name="sqlSessionFactory" ref="sqlSessionFactory" />
		<property name="mapperInterface"
			value="com.ritikk.teamcollab.mappers.ProjectsMapper" />
	</bean>
</beans>